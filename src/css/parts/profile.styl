.profile
  box-sizing: border-box
  min-height: 100vh
  width: 400px
  padding: 80px 0
  background-color: #323232
  color: white
  text-align: center

.profile__title 
  > span
    display: inline-block
    text-transform: uppercase
    font-weight: 700
    font-size: 1.3rem
    padding: .8rem 1.5rem
    border-bottom 1px solid white
  &--name > span
    line-height: 100%
    font-size: 3rem
    border: 0

.profile__text
  font-weight: 500
  width: 60%
  margin: 0 auto
  line-height: 150%;
  &--division
    margin-bottom: 1.5rem
  &--job
    text-transform: uppercase
    border-bottom: 1px solid white
    padding-bottom: 3rem

// #Media
@media(max-width: 800px)
  .profile
    width: unset

@media(max-height: 400px)
  .profile
    padding-top: 0
  .profile .block:first-child
    display: flex
    align-items: center
    flex-direction: column
    justify-content: center
    height: 100vh